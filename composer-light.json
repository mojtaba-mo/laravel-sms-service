{
    "name": "mojtaba-mo/laravel-sms-service-light",
    "description": "Lightweight SMS service using Melipayamak API - No database dependencies",
    "type": "library",
    "require": {
        "php": ">=8.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "suggest": {
        "illuminate/database": "Required for full OTP functionality with database storage"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "OtpAuth\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OtpAuth\\SmsServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "mojtaba-mo",
            "email": "mojtabash537@gmail.com"
        }
    ],
    "minimum-stability": "stable"
}
